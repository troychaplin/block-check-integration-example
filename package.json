{
	"name": "ba11y-checks-example",
	"version": "1.4.21",
	"description": "An example of an external multi-block with accessibility & validation checks",
	"author": "Troy Chaplin",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build --experimental-modules --blocks-manifest",
		"lint": "npm run lint:js && npm run lint:php && npm run lint:css",
		"format": "npm run format:js && npm run format:php && npm run format:css",
		"lint:css": "stylelint \"**/*.scss\" --max-warnings=0",
		"format:css": "stylelint \"**/*.scss\" --fix",
		"lint:js": "wp-scripts lint-js --max-warnings=0",
		"format:js": "wp-scripts lint-js --fix",
		"lint:php": "composer run lint",
		"format:php": "./vendor/bin/phpcbf --standard=phpcs.xml.dist -v",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start --experimental-modules --blocks-manifest"
	},
	"devDependencies": {
		"@wordpress/block-editor": "^15.10.0",
		"@wordpress/blocks": "^15.10.0",
		"@wordpress/components": "^31.0.0",
		"@wordpress/data": "^10.37.0",
		"@wordpress/editor": "^14.37.0",
		"@wordpress/element": "^6.37.0",
		"@wordpress/eslint-plugin": "^23.0.0",
		"@wordpress/hooks": "^4.37.0",
		"@wordpress/i18n": "^6.10.0",
		"@wordpress/icons": "^11.4.0",
		"@wordpress/plugins": "^7.37.0",
		"@wordpress/prettier-config": "^4.37.0",
		"@wordpress/scripts": "^31.2.0",
		"@wordpress/stylelint-config": "^23.29.0",
		"eslint-config-prettier": "^10.1.8",
		"stylelint": "^16.26.1",
		"stylelint-scss": "^6.13.0"
	}
}
